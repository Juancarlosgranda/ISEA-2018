        }
      </field>
    </record>
    -->
        <menuitem name="Actividades" id="peti.actividades" parent="peti.menu_root"/>
        <!-- actions -->
        <menuitem name="Listado" id="peti.actividades_list" parent="peti.actividades" action="peti.action_window_actividades"/>
    </data>
</odoo>